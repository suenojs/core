{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": [
      "bun-types"
    ],
    "baseUrl": ".",
    "paths": {
      "@sueno/logger": [
        "libs/logger/src"
      ],
      "@sueno/logger-prometheus": [
        "libs/logger-prometheus/src"
      ]
    },
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}